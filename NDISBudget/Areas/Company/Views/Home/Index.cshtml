@model NDIS.Entities.DashboardData
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Company/Views/Shared/_Layout.cshtml";
}

<main id="main-container">
    <div class="content">
        <div
            class="d-md-flex justify-content-md-between align-items-md-center py-3 pt-md-3 pb-md-0 text-center text-md-start">
            <div>
                <h1 class="my-5 ms-5 fw-bold text-capitalize F_28">
                    Dashboard
                </h1>
            </div>
        </div>

        <div class="post fs-6 d-flex flex-column-fluid" id="kt_post">
            <div class="container-xxl">
                <div class="row g-5">
                    <div class="col-xxl-12">
                        <div class="row g-5 g-xl-10">
                            <div class="col-md-6 col-xl-6">
                                <div class="card overflow-hidden mb-5 mb-xl-10 shadow">
                                    <!-- Card Header -->
                                    <div class="card-header pt-5">
                                        <!-- Card Body -->
                                        <div
                                            class="card-body d-flex flex-column justify-content-between align-items-center px-0 pb-0">
                                            <!-- Icon -->
                                            <div class="text-center mb-4">
                                                <i class="fas fa-user fs-3x text-primary"></i>
                                            </div>
                                            <!-- Title and Content -->
                                            <div class="card-title text-center mb-4">
                                                <!-- Amount (appears above) -->
                                                <div class="d-flex flex-column align-items-center">
                                                    <span
                                                        class="fs-2hx fw-bold text-gray-900 lh-1 ls-n2">@Model.TotalActiveClients</span>
                                                    <!-- Subtitle (appears below) -->
                                                    <span class="text-gray-500 pt-1 fw-semibold fs-6">Total Active
                                                        Clients</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="text-center mb-3">
                                        <div
                                            style="display: inline-block; width: 50%; height: 4px; background: linear-gradient(to right, #f06, #00f, #0f0, #ff0);">
                                        </div>
                                    </div>

                                    <!-- Card Footer -->
                                    <div class="card-footer text-center pt-3">
                                        <a class="fw-medium" href="/Company/Client/index?status=1">
                                            View all users
                                            <i class="fa fa-arrow-right ms-1 opacity-25"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="card overflow-hidden shadow">
                                    <!-- Card Header -->
                                    <div class="card-header pt-5">
                                        <!-- Card Body -->
                                        <div
                                            class="card-body d-flex flex-column justify-content-between align-items-center px-0 pb-0">
                                            <!-- Icon -->
                                            <div class="text-center mb-4">
                                                <i class="far fa-money-bill-alt fs-3x text-success"></i>
                                            </div>
                                            <!-- Title and Content -->
                                            <div class="card-title text-center mb-4">
                                                <div class="d-flex flex-column align-items-center">
                                                    <span
                                                        class="fs-2hx fw-bold text-gray-900 lh-1 ls-n2">@Model.CompanyAlloctedBudgetStr</span>
                                                    <span class="text-gray-500 pt-1 fw-semibold fs-6">Allocated
                                                        Budget</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-center mb-3">
                                        <div
                                            style="display: inline-block; width: 50%; height: 4px; background: linear-gradient(to right, #f06, #00f, #0f0, #ff0);">
                                        </div>
                                    </div>

                                    <!-- Card Footer -->
                                    <div class="card-footer text-center pt-3">
                                        <a class="fw-medium" href="/Company/Client/Budget">
                                            View Budget
                                            <i class="fa fa-arrow-right ms-1 opacity-25"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 col-xl-6 mb-xxl-10">
                                <div class="card overflow-hidden mb-5 mb-xl-10 shadow">
                                    <!-- Card Header -->
                                    <div class="card-header pt-5">
                                        <!-- Card Body -->
                                        <div
                                            class="card-body d-flex flex-column justify-content-between align-items-center px-0 pb-0">
                                            <!-- Icon -->
                                            <div class="text-center mb-4">
                                                <i class="fas fa-user-slash fs-3x text-danger"></i>
                                            </div>
                                            <!-- Title and Content -->
                                            <div class="card-title text-center mb-4">
                                                <!-- Amount (appears above) -->
                                                <div class="d-flex flex-column align-items-center">
                                                    <span
                                                        class="fs-2hx fw-bold text-gray-900 lh-1 ls-n2">@Model.TotalInactiveClients</span>
                                                    <!-- Subtitle (appears below) -->
                                                    <span class="text-gray-500 pt-1 fw-semibold fs-6">Total Inactive
                                                        Clients</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="text-center mb-3">
                                        <div
                                            style="display: inline-block; width: 50%; height: 4px; background: linear-gradient(to right, #f06, #00f, #0f0, #ff0);">
                                        </div>
                                    </div>

                                    <!-- Card Footer -->
                                    <div class="card-footer text-center pt-3">
                                        <a class="fw-medium" href="/Company/Client/index?status=0">
                                            View all users
                                            <i class="fa fa-arrow-right ms-1 opacity-25"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="card overflow-hidden shadow">
                                    <!-- Card Header -->
                                    <div class="card-header pt-5">
                                        <!-- Card Body -->
                                        <div
                                            class="card-body d-flex flex-column justify-content-between align-items-center px-0 pb-0">
                                            <!-- Icon -->
                                            <div class="text-center mb-4">
                                                <i class="fas fa-coins fs-3x text-warning"></i>
                                            </div>
                                            <!-- Title and Content -->
                                            <div class="card-title text-center mb-4">
                                                <div class="d-flex flex-column align-items-center">
                                                    <span
                                                        class="fs-2hx fw-bold text-gray-900 lh-1 ls-n2">@Model.CompanyEstimatedBudgetStr</span>
                                                    <span class="text-gray-500 pt-1 fw-semibold fs-6">Working
                                                        Budget</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-center mb-3">
                                        <div
                                            style="display: inline-block; width: 50%; height: 4px; background: linear-gradient(to right, #f06, #00f, #0f0, #ff0);">
                                        </div>
                                    </div>

                                    <!-- Card Footer -->
                                    <div class="card-footer text-center pt-3">
                                        <a class="fw-medium" href="/Company/Client/Budget">
                                            View Budget
                                            <i class="fa fa-arrow-right ms-1 opacity-25"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>