<script>
    $(() => {

        $(document).on('change', '#ClientId', function (event) {
            BindClientBudget();
        });

        $(document).on('click', '#shwbtn', function (event) {
            BindClientBudgetSummary();

        });
        function BindClientBudgetSummary() {
            var id = $("#ClientBudgetId").val();
            gl.ajaxreqloader(apiurl + "Client/GetClientBudgetSummary", "GET", { id: id }, function (response) {

                if (response != null) {
                    console.log(response.surPlusStr);
                    $('#SurPlusStr').html(response.surPlusStr);
                    $('#FundingStr').html(response.fundingStr);
                    $('#SumOfSurvicesStr').html(response.sumOfSurvicesStr);
                    $('#FirstVisitDateStr').html(response.firstVisitDateStr);
                    $('#LastVisitDateStr').html(response.lastVisitDateStr);
                    $('#TotalVisits').html(response.totalVisits);
                    if (response.totalVisits > 0)
                        getSupportItem()
                }
            });
        }
        //alert(1)
        function BindClientBudget() {
            var id = $("#ClientId").val();
            gl.ajaxreqloader(apiurl + "Client/GetddlClientBudgetById", "GET", { id: id }, function (response) {
                console.log(response)
                $('#ClientBudgetId').empty();
                if (response.length > 0) {
                    $('#ClientBudgetId').append($('<option>', {
                        value: 0,
                        text: "Select Client Budget."
                    }));
                    $.each(response, function (i, item) {

                        $('#ClientBudgetId').append($('<option>', {
                            value: item.clientBudgetId,
                            text: '$' + item.proposedBudget
                        }));
                    });
                }
                else {
                    $('#ClientBudgetId').append($('<option>', {
                        value: 0,
                        text: "No Client Budgets"
                    }));
                }
            });
        }
    });
</script>

