@model NDIS.Entities.SupportCategory
@{
    ViewData["Title"] = "AddCategories";
    Layout = "~/Areas/Company/Views/Shared/_Layout.cshtml";
}

<main id="main-container">

    <div class="content">
        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">Add Client</h3>
            </div>
            <div class="block-content">
                <form asp-action="Add" asp-controller="Settings" method="POST">
                    @* <h2 class="content-heading pt-0">Basic</h2> *@
                    @* <div  asp-validation-summary="All" class="invalid-feedback animated"></div> *@
                    <div class="row push">
                        @Html.HiddenFor(a => a.SupportCategoryId)


                        <div class="col-lg-12 col-xl-6">
                            <div class="mb-4">
                                <label class="form-label" for="example-text-input">Support Category Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" asp-for="SupportCategoryName" id="SupportCategoryName" name="SupportCategoryName" value="@Model.SupportCategoryName" placeholder="Enter Support Category Name">
                                <span asp-validation-for="SupportCategoryName" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="col-sm-12 col-md-6">
                            <label class="form-label" for="val-skill">Status </label>
                            <select class="form-select" asp-for="IsActive" id="IsActive" name="IsActive" fdprocessedid="xkq1ao" aria-describedby="val-skill-error" aria-invalid="true">
                                <option value="1">Active</option>
                                <option value="0">Inactive</option>
                            </select>

                        </div>

                        <div class="col-sm-12 col-md-6">
                            <button type="submit" id="savebtn" class="btn btn-primary ">Save</button>
                            <a href="/company/settings/Categories" id="cnlbtn" class="btn btn-warning">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<script>
    $(() => {
        $("#IsActive").val(@Model.IsActive);
    });
</script>