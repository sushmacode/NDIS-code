@model NDIS.Entities.SupportCategory
@{
    ViewData["Title"] = "AddCategories";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main-container">
    <div class="content">
        <div class="d-md-flex justify-content-md-between align-items-md-center py-3 pt-md-3 pb-md-0 text-center text-md-start">
            <div>
                <h1 class="my-5 ms-5 fw-bold text-capitalize F_28">Add Client</h1>
            </div>
        </div>
        <div class="post fs-6 d-flex flex-column-fluid" id="kt_post">
            <div class="container-fluid">
                <div class="row g-5 gx-xl-10">
                    <div class="col-xxl-12 mb-md-12 mb-xl-12">
                        <form asp-action="Add" asp-controller="Settings" method="POST">
                            <div class="row push">
                                @Html.HiddenFor(a => a.SupportCategoryId)

                                <div class="col-lg-12 col-xl-6 mb-4">
                                    <label class="form-label" for="example-text-input">Support Category Name <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" asp-for="SupportCategoryName" id="SupportCategoryName" name="SupportCategoryName" value="@Model.SupportCategoryName" placeholder="Enter Support Category Name">
                                    <span asp-validation-for="SupportCategoryName" class="text-danger"></span>
                                </div>

                                <div class="col-lg-12 col-xl-6 mb-4">
                                    <label class="form-label" for="val-skill">Status </label>
                                    <select class="form-select" asp-for="IsActive" id="IsActive" name="IsActive" fdprocessedid="xkq1ao" aria-describedby="val-skill-error" aria-invalid="true">
                                        <option value="1">Active</option>
                                        <option value="0">Inactive</option>
                                    </select>
                                </div>
                                <div class="col-lg-12 d-flex justify-content-end mt-4">
                                    <button type="submit" id="savebtn"
                                            class="btn btn-outline-primary me-2">
                                        Save
                                    </button>
                                    <a href="/company/settings/Categories" id="cnlbtn"
                                       class="btn btn-outline-warning">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>




<script>
    $(() => {
        $("#IsActive").val(@Model.IsActive);
    });
</script>