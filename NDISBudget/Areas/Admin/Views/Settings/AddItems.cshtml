@model NDIS.Entities.SupportItem

@{
    ViewData["Title"] = "AddItems";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main-container">
    <div class="content">
        <div class="d-md-flex justify-content-md-between align-items-md-center py-3 pt-md-3 pb-md-0 text-center text-md-start">
            <div>
                <h1 class="my-5 ms-5 fw-bold text-capitalize F_28">Add Support Item</h1>
            </div>
        </div>
        <div class="post fs-6 d-flex flex-column-fluid" id="kt_post">
            <div class="container-fluid">
                <div class="row g-5 gx-xl-10">
                    <div class="col-xxl-12 mb-md-12 mb-xl-12">
                        <form asp-action="AddItems" asp-controller="Settings" method="POST">
                            <div class="row push">
                                @Html.HiddenFor(a => a.SupportItemId)

                                <div class="col-lg-12 col-xl-6 mb-4">
                                    <label class="form-label" for="example-text-input">
                                        Support Item Name <span class="text-danger">*</span>
                                    </label>
                                    <input type="text" class="form-control" asp-for="SupportItemName"
                                           id="SupportItemName" name="SupportItemName" value="@Model.SupportItemName"
                                           placeholder="Enter Support Item Name">
                                    <span asp-validation-for="SupportItemName" class="text-danger"></span>
                                </div>

                                <div class="col-lg-12 col-xl-6 mb-4">
                                    <label class="form-label" for="example-text-input">
                                        Support Item Number <span class="text-danger">*</span>
                                    </label>
                                    <input type="text" class="form-control" asp-for="SupportItemNumber"
                                           id="SupportItemNumber" name="SupportItemNumber" value="@Model.SupportItemNumber"
                                           placeholder="Enter Support Item Name">
                                    <span asp-validation-for="SupportItemNumber" class="text-danger"></span>
                                </div>

                                <div class="col-lg-12 col-xl-6 mb-4">
                                    <label class="form-label" for="val-skill">Support Category </label>
                                    <select class="form-select" id="SupportCategoryId" name="SupportCategoryId">
                                        @foreach (var i in @Model.SupportCategories)
                                        {
                                            <option value="@i.SupportCategoryId">@i.SupportCategoryName</option>
                                        }
                                    </select>
                                </div>

                                <div class="col-lg-12 col-xl-6 mb-4">
                                    <label class="form-label" for="val-skill">Status </label>
                                    <select class="form-select" asp-for="Status" id="Status" name="Status"
                                            fdprocessedid="xkq1ao" aria-describedby="val-skill-error" aria-invalid="true">
                                        <option value="1">Active</option>
                                        <option value="0">Inactive</option>
                                    </select>
                                </div>

                                <div class="col-lg-12 col-xl-6 mb-4">
                                    <label class="form-label" for="example-text-input">
                                        Mandatory Day<span class="text-danger">*</span>
                                    </label>
                                    <select class="form-select" asp-for="DayMandatoryId" id="DayMandatoryId"
                                            name="DayMandatoryId" fdprocessedid="xkq1ao" aria-describedby="val-skill-error"
                                            aria-invalid="true">
                                        <option value="0">Daily</option>
                                        <option value="1">Weekday</option>
                                        <option value="2">Saturday</option>
                                        <option value="3">Sunday</option>
                                    </select>
                                </div>

                                <div class="col-lg-12 col-xl-6 mb-4">
                                    <label class="form-label" for="example-text-input">
                                        Support Item Custom Name <span class="text-danger">*</span>
                                    </label>
                                    <input type="text" class="form-control" asp-for="CustomName" id="CustomName"
                                           name="CustomName" value="@Model.CustomName"
                                           placeholder="Enter Support Item Custom Name">
                                    <span asp-validation-for="CustomName" class="text-danger"></span>
                                </div>

                                <div class="col-lg-12 d-flex justify-content-end mt-4">
                                    <button type="submit" id="savebtn"
                                            class="btn btn-outline-primary me-2">
                                        Save
                                    </button>
                                    <a href="/company/settings/Items" id="cnlbtn"
                                       class="btn btn-outline-warning">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    $(() => {
        $("#SupportCategoryId").val(@Model.SupportCategoryId);
        $("#IsActive").val(@Model.Status);
        $("#DayMandatoryId").val(@Model.DayMandatoryId);
    });
</script>

